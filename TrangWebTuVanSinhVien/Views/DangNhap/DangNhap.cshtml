@model TrangWebTuVanSinhVien.Models.USER

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row bg-success no-gutters align-items-center" style="min-height: calc(100vh - 56px)">
        <div class="col">
            <div class="container py-5" role="alert">
                <div class="row py-5">
                    <div class="col-auto d-none d-xl-flex flex-column align-items-center justify-content-center">
                        <i class="far fa-question-circle" style="font-size: 240px"></i>

                        <h2 class="mt-3">
                            Trang web tư vấn sinh viên hàng đầu
                        </h2>
                    </div>
                    <div class="col-11 col-md-9 col-xl-5 py-5 bg-white ml-auto mr-auto mr-xl-0" style="border-radius:4px">
                        <h2 class="m-0 text-center">ĐĂNG NHẬP</h2>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group form-row align-items-center">
                            <div class="col">
                                <input type="text" class="form-control" id="mail" name="Email" placeholder="Email"/>
                            </div>
                        </div>

                        <div class="form-group form-row align-items-center">
                            <div class="col">
                                <input type="password" class="form-control" id="pwd" name="PassWord" placeholder="Mật khẩu"/>
                            </div>
                        </div>

                        <div class="form-group form-row mb-0">
                            <div class="col-12 d-flex">
                                @Html.ActionLink("Trở về", "Index", "Home", null, new { @class = "btn btn-secondary btn-login-page ml-auto" })
                                <button type="submit" class="btn btn-primary btn-login-page ml-2">
                                    Đăng nhập
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
    
}


